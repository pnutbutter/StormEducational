@model Website.Areas.GroupAdmin.Models.SchoolAdminData.SchoolAdminIndex
@{
    ViewBag.Title = "School Admins";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">School Admins</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        @Html.HiddenFor(model => model.GroupId)
        @if (!string.IsNullOrWhiteSpace(this.Model.Message))
        {
            <div class="col-lg-12">
                <h2 class="page-header alert alert-warning">@this.Model.Message</h2>
            </div>
        }
        <div class="text-center col-lg-12 pad-1">
            <a class="btn btn-lg btn-primary" href="@Url.Action("Create", "SchoolAdmin", new { Area = "GroupAdmin", GroupId = Model.GroupId })">Assign User as School Admin </a>
            <a class="btn btn-lg btn-primary" href="@Url.Action("Create","SchoolAdmin", new {Area="Gary", GroupId=Model.GroupId})">Send Email to new User(s) </a>
        </div>
        <table class="table table-striped table-bordered" cellspacing="0">
            <thead>
                <tr>
                    <th>Admin Name</th>
                    <th>Email</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < this.Model.ItemList.Count; i++)
                {
                    <tr>
                        <td>
                            @this.Model.ItemList[i].LastName , @this.Model.ItemList[i].FirstName
                        </td>
                        <td>
                            @*@this.Model.ItemList[i].Email*@
                        </td>
                        <td class="text-right">
                            <a class="btn btn-primary" href="@Url.Action("ConfirmDelete", "SchoolAdmin", new { Area = "GroupAdmin", UserRoleId = this.Model.ItemList[i].UserRoleId, GroupId = this.Model.ItemList[i].GroupId })">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
