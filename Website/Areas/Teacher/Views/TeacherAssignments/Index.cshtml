@model Website.Areas.Teacher.Models.TeacherAssignmentsData.TeacherAssignmentsIndex

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Assignments</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-2">
        <a href="@Url.Action("Create", "TeacherAssignments", new { Area = "Teacher" })" class="text-center btn btn-primary">Create Assignment</a>
    </div>
</div>
<div class="row">
    @if (!string.IsNullOrWhiteSpace(this.Model.Message))
    {
        <div class="col-lg-12">
            <h2 class="page-header alert alert-warning">@this.Model.Message</h2>
        </div>
    }
    <div class="col-lg-12">
        <h2 class="page-header">Current Assignments</h2>
    </div>
    <div class="col-lg-12">
        @if (this.Model.ItemList.Count == 0)
        {
            <div class="text-center">
                <p>You haven't created any assignments yet!</p>
                <p><a href="@Url.Action("Create", "TeacherAssignments", new { Area = "Teacher" })" class="text-center btn btn-primary">Create an Assignment</a></p>
            </div>
        }
        else
        {
            <table id="example" class="table table-striped table-bordered" cellspacing="0">
                <thead>
                    <tr>
                        <th>Assignment</th>
                        <th>Type</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < this.Model.ItemList.Count; i++)
                    {
                        <tr>
                            <td>
                                @this.Model.ItemList[i].AssignmentTitle
                            </td>
                            <td>
                                @this.Model.ItemList[i].AssignmentType.AssignmentTypeTitle
                            </td>
                            <td class="text-right">
                                <a class="btn btn-sm btn-primary" href="@Url.Action("Assign", "TeacherAssignments", new { Area = "Teacher", id = this.Model.ItemList[i].AssignmentId })">Assign</a>
                                <a class="btn btn-sm btn-primary" href="@Url.Action("Edit", "TeacherAssignments", new { Area = "Teacher", id = this.Model.ItemList[i].AssignmentId })">Edit</a>
                                <a class="btn btn-sm btn-warning" href="@Url.Action("ConfirmDelete", "TeacherAssignments", new { Area = "Teacher", id = this.Model.ItemList[i].AssignmentId })">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</div>
