@model Website.Areas.Teacher.Models.TeacherAssignmentsData.TeacherAssignmentsDelete
@{
    ViewBag.Title = "Delete Assignment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Delete Assignment</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="col-lg-12">
            <h2 class="page-header alert alert-warning">Delete Assignment?</h2>
        </div>
        <div class="form-horizontal">
            <div class="container-fluid clearfix">
                <div class="col-sm-12">
                    <div class="form-group">
                        @Html.LabelFor(model => model.AssignmentTitle, htmlAttributes: new { @class = "control-label col-sm-4" })
                        <div class="col-md-8">
                            @Html.DisplayFor(model => model.AssignmentTitle, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.AssignmentTitle, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.AssignmentDescription, htmlAttributes: new { @class = "control-label col-sm-4" })
                        <div class="col-md-8">
                            @Html.DisplayFor(model => model.AssignmentDescription)
                            @Html.ValidationMessageFor(model => model.AssignmentDescription, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            </div>
            <div class="container-fluid clearfix pad-1">
                <div class="col-sm-12">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(model => model.AssignmentId)
                        <div class="form-group">
                            <div class="col-md-12 text-right">
                                <a class="btn btn-primary" href="@Url.Action("Index", "Group", new { Area = "Administration" })">Cancel</a>
                                <input type="submit" value="Yes, Delete Assignment" class="btn btn-default" />
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>


