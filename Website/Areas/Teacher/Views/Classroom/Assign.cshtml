@model Website.Areas.Teacher.Models.ClassroomData.ClassroomAssign

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Assign Students</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
@using (Html.BeginForm("Assign", "Classroom", new { Area = "Teacher" }, FormMethod.Get, new { @class = "form-horizontal" }))
{
    <div class="form-group">
        @Html.LabelFor(model => model.Search, htmlAttributes: new { @class = "control-label col-sm-2" })
        <div class="col-sm-6">
            @Html.EditorFor(model => model.Search, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Search, "", new { @class = "text-danger" })
        </div>
        <div class="col-sm-4">
            <input type="submit" value="Search" class="btn btn-primary" />
        </div>
    </div>
}
    </div>
    <div class="col-lg-12 text-center">
        @using (Html.BeginForm("Assign", "Classroom", new { Area = "Teacher" }, FormMethod.Get, new { @class = "form-horizontal" }))
        {
            @Html.HiddenFor(model => model.SchoolId)
            <input type="submit" value="Find All in School" class="btn btn-primary" />
        }
    </div>
</div>
<div class="row">
    @if (!string.IsNullOrWhiteSpace(this.Model.Message))
    {
        <div class="col-lg-12">
            <h2 class="page-header alert alert-warning">@this.Model.Message</h2>
        </div>
    }
    <div class="col-lg-12">
        <h2 class="page-header">Current Students</h2>
    </div>
    <div class="col-lg-12">
        @if (this.Model.ItemList.Count == 0 && this.Model.SearchList.Count == 0 && string.IsNullOrWhiteSpace(this.Model.Search))
        {
            <div class="text-center">
                <p>No students are currently assigned to you! Please search for students above</p>
            </div>
        }
        else if (this.Model.ItemList.Count == 0 && this.Model.SearchList.Count == 0 && !string.IsNullOrWhiteSpace(this.Model.Search))
        {
            <div class="text-center">
                <p>Your search result did not return any students. The student may still need to create an account.</p>
            </div>
        }
        else if (this.Model.SearchList.Count > 0)
        {
            <table id="example" class="table table-striped table-bordered" cellspacing="0">
                <thead>
                    <tr>
                        <th>Student Name</th>
                        <th>Email</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < this.Model.SearchList.Count; i++)
                    {
                        <tr>
                            <td>
                                @this.Model.SearchList[i].FirstName @this.Model.SearchList[i].LastName
                            </td>
                            <td>
                                @this.Model.SearchList[i].Email
                            </td>
                            <td class="text-right">
                                @*<a class="btn btn-sm btn-primary" href="@Url.Action("Assign", "TeacherAssignments", new { Area = "Teacher", id = this.Model.ItemList[i].AssignmentId })">Assign</a>
                                    <a class="btn btn-sm btn-primary" href="@Url.Action("Edit", "TeacherAssignments", new { Area = "Teacher", id = this.Model.ItemList[i].AssignmentId })">Edit</a>
                                    <a class="btn btn-sm btn-warning" href="@Url.Action("ConfirmDelete", "TeacherAssignments", new { Area = "Teacher", id = this.Model.ItemList[i].AssignmentId })">Delete</a>*@
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <table id="example" class="table table-striped table-bordered" cellspacing="0">
                <thead>
                    <tr>
                        <th>Student Name</th>
                        <th>Email</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < this.Model.ItemList.Count; i++)
                    {
                        <tr>
                            <td>
                                @this.Model.ItemList[i].StudentFirstName @this.Model.ItemList[i].StudentLastName
                            </td>
                            <td>
                                @this.Model.ItemList[i].StudentEmail
                            </td>
                            <td class="text-right">
                                @*<a class="btn btn-sm btn-primary" href="@Url.Action("Assign", "TeacherAssignments", new { Area = "Teacher", id = this.Model.ItemList[i].AssignmentId })">Assign</a>
                                <a class="btn btn-sm btn-primary" href="@Url.Action("Edit", "TeacherAssignments", new { Area = "Teacher", id = this.Model.ItemList[i].AssignmentId })">Edit</a>
                                <a class="btn btn-sm btn-warning" href="@Url.Action("ConfirmDelete", "TeacherAssignments", new { Area = "Teacher", id = this.Model.ItemList[i].AssignmentId })">Delete</a>*@
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</div>
