@model Website.Areas.Teacher.Models.ClassroomData.ClassroomIndex
@{
    ViewBag.Title = "Classrooms";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Classrooms</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        @if (!string.IsNullOrWhiteSpace(this.Model.Message))
        {
            <div class="col-lg-12">
                <h2 class="page-header alert alert-warning">@this.Model.Message</h2>
            </div>
        }
        <div class="text-center col-lg-12 pad-1">
            <a class="btn btn-lg btn-primary" href="@Url.Action("Create","Classroom", new {Area="Teacher"})">Create Classroom</a>
        </div>
        <table class="table table-striped table-bordered" cellspacing="0">
            <thead>
                <tr>  
                    <th>Classroom Name</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < this.Model.ItemList.Count; i++)
                {
                    <tr>
                        <td>
                            @this.Model.ItemList[i].GroupName
                        </td>
                        <td class="text-right">
                            <a class="btn btn-primary" href="@Url.Action("Assign", "Classroom", new { Area = "Teacher", id = this.Model.ItemList[i].GroupId })">Assign Students</a>
                            <a class="btn btn-primary" href="@Url.Action("Edit", "Classroom", new { Area = "Teacher", id = this.Model.ItemList[i].GroupId })">Edit</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
