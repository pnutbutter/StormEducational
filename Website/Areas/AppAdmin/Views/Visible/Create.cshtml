@model Website.Areas.AppAdmin.Models.VisibleData.VisibleCreate
@{
    ViewBag.Title = "Add Access";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Add Access</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <h2 class="page-header">Find District or School</h2>
    </div>
    <div class="col-lg-12">
        <div class="text-center col-lg-12 pad-1">
            <a class="btn btn-lg btn-primary" href="@Url.Action("Create","SchoolGroup", new {Area="AppAdmin"})">Create New District or School</a>
        </div>
            @using (Html.BeginForm("Search", "Visible", FormMethod.Post, new { @class = "form-horizontal" }))
            {
                <div class="form-group">
                    <label for="Search" class="control-label col-md-2">Search</label>
                    <div class="col-md-8">
                        <input type="text" name="Search" id="Search" class="form-control" />
                    </div>
                    <div class="col-md-2">
                        <button class="btn btn-primary" href="@Url.Action("Create","Visible", new {Area="AppAdmin"})">Search</button>
                    </div>
                </div>
            }
        
        <table class="table table-striped table-bordered" cellspacing="0">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Type</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>
                        Compton
                    </td>
                    <td>
                        District
                    </td>
                    <td class="text-right">
                        <a class="btn btn-warning" href="@Url.Action("AddAccess", "Visible", new { Area = "AppAdmin", id = "1" })">Add Access</a>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
