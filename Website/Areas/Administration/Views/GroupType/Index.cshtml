@model Website.Areas.Administration.Models.GroupTypeData.GroupTypeIndex
@{
    ViewBag.Title = "Group Types";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Group Types</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        @if (!string.IsNullOrWhiteSpace(this.Model.Message))
        {
            <div class="col-lg-12">
                <h2 class="page-header alert alert-warning">@this.Model.Message</h2>
            </div>
        }
        <div class="text-center col-lg-12 pad-1">
            <a class="btn btn-lg btn-primary" href="@Url.Action("Create","GroupType", new {Area="Administration"})">Add Group Type</a>
        </div>
        <table class="table table-striped table-bordered" cellspacing="0">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Is Active</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < this.Model.ItemList.Count; i++)
                {
                    <tr>
                        <td>
                            @this.Model.ItemList[i].GroupName
                        </td>
                        <td>
                            @(this.Model.ItemList[i].IsActive ? "Yes" : "No")
                        </td>
                        <td class="text-right">
                            <a class="btn btn-default" href="@Url.Action("ConfirmDelete", "GroupType", new { Area = "Administration", id = this.Model.ItemList[i].GroupTypeId })">Inactivate</a>
                            <a class="btn btn-primary" href="@Url.Action("Edit", "GroupType", new { Area = "Administration", id = this.Model.ItemList[i].GroupTypeId })">Edit</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
