@model Website.Areas.Administration.Models.UserGroupData.UserGroupIndex
@{
    ViewBag.Title = "User Groups";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">User Groups</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        @if (!string.IsNullOrWhiteSpace(this.Model.Message))
        {
            <div class="col-lg-12">
                <h2 class="page-header alert alert-warning">@this.Model.Message</h2>
            </div>
        }
        <div class="text-center col-lg-12 pad-1">
            <a class="btn btn-lg btn-primary" href="@Url.Action("Create","UserGroup", new {Area="Administration", UserId = this.Model.UserId})">Add User Group</a>
        </div>
        <table class="table table-striped table-bordered" cellspacing="0">
            <thead>
                <tr>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Group</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < this.Model.ItemList.Count; i++)
                {
                    <tr>
                        <td>
                            @this.Model.ItemList[i].FirstName
                        </td>
                        <td>
                            @this.Model.ItemList[i].LastName
                        </td>
                        <td>
                            @this.Model.ItemList[i].GroupName
                        </td>
                        <td class="text-right">
                            <a class="btn btn-primary" href="@Url.Action("Edit", "UserGroup", new { Area = "Administration", id = this.Model.ItemList[i].UserGroupId })">Edit</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


