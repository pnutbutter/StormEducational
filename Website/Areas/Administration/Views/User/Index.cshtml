@model Website.Areas.Administration.Models.UserData.UserIndex
@{
    ViewBag.Title = "Users";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Users</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        @if (!string.IsNullOrWhiteSpace(this.Model.Message))
        {
            <div class="col-lg-12">
                <h2 class="page-header alert alert-warning">@this.Model.Message</h2>
            </div>
        }
        <div class="text-center col-lg-12 pad-1">
            <a class="btn btn-lg btn-primary" href="@Url.Action("Create","User", new {Area="Administration"})">Add User</a>
        </div>
        <table class="table table-striped table-bordered" cellspacing="0">
            <thead>
                <tr>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Screen Name</th>
                    <th>Identifier</th>
                    <th>Is Active</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < this.Model.ItemList.Count; i++)
                {
                    <tr>
                        <td>
                            @this.Model.ItemList[i].FirstName
                        </td>
                        <td>
                            @this.Model.ItemList[i].LastName
                        </td>
                        <td>
                            @this.Model.ItemList[i].ScreenName
                        </td>
                        <td>
                            @this.Model.ItemList[i].Identifier
                        </td>
                        <td>
                            @(this.Model.ItemList[i].IsActive ? "Yes" : "No")
                        </td>
                        <td class="text-right">
                            <a class="btn btn-default" href="@Url.Action("ConfirmDelete", "User", new { Area = "Administration", id = this.Model.ItemList[i].UserId })">Inactivate</a>
                            <a class="btn btn-primary" href="@Url.Action("Edit", "User", new { Area = "Administration", id = this.Model.ItemList[i].UserId })">Edit</a>
                            <a class="btn btn-primary" href="@Url.Action("Index", "UserRole", new { Area = "Administration", id = this.Model.ItemList[i].UserId })">Roles</a>
                            <a class="btn btn-primary" href="@Url.Action("Index", "UserGroup", new { Area = "Administration", id = this.Model.ItemList[i].UserId })">Groups</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
