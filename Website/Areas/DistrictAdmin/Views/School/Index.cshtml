@model Website.Areas.DistrictAdmin.Models.SchoolData.SchoolIndex
@{
    ViewBag.Title = "Schools";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Schools</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        @Html.HiddenFor(model => model.DistrictId)
        @if (!string.IsNullOrWhiteSpace(this.Model.Message))
        {
            <div class="col-lg-12">
                <h2 class="page-header alert alert-warning">@this.Model.Message</h2>
            </div>
        }
        <div class="text-center col-lg-12 pad-1">
            <a class="btn btn-lg btn-primary" href="@Url.Action("Create", "School", new { Area = "DistrictAdmin", id = this.Model.DistrictId })">Create School</a>
        </div>


        @if (this.Model.ItemList.Count == 0)
        {
            <div class="text-center">
                <p>You haven't created any schools yet!</p>
                <p><a href="@Url.Action("Create", "School", new { Area = "DistrictAdmin" })" class="text-center btn btn-primary">Create a School</a></p>
            </div>
        }
        else
        {
            <table class="table table-striped table-bordered" cellspacing="0">
                <thead>
                    <tr>
                        <th>School Name</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < this.Model.ItemList.Count; i++)
                    {
                        <tr>
                            <td>
                                @this.Model.ItemList[i].GroupName
                            </td>
                            <td class="text-right">
                                @*<a class="btn btn-sm btn-primary" href="@Url.Action("Assign", "School", new { Area = "DistictAdmin", id = this.Model.ItemList[i].GroupId })">Assign Sch</a>*@
                                <a class="btn btn-sm btn-primary" href="@Url.Action("Edit", "School", new { Area = "DistrictAdmin", id = this.Model.ItemList[i].GroupId })">Edit</a>
                                <a class="btn btn-sm btn-warning" href="@Url.Action("ConfirmDelete", "School", new { Area = "DistrictAdmin", id = this.Model.ItemList[i].GroupId })">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

        }
    </div>
</div>
