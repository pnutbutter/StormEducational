@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()
    }
        <li>
            <a href="@Url.Action("Index","Manage", new{Area=""})"><i class="fa fa-user fa-fw"></i> Manage Account</a>
        </li>
        <li><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
    
}
else
{

        <li><a href="@Url.Action("Register","Account", new {Area=""})" id="registerLink">Register</a></li>
        <li><a href="@Url.Action("Login", "Account", new { Area = "" })" id="loginLink">Log in</a></li>

}
