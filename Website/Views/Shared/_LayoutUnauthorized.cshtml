<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>@ViewBag.Title</title>
    @RenderSection("styles", required: false)
    @Styles.Render("~/Content/css/blah")
    @Scripts.Render("~/bundles/modernizr")

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->

</head>
<body>
    <div id="wrapper">

        <!-- Navigation -->
        <nav class="navbar navbar-default navbar-static-top" role="navigation" style="margin-bottom: 0">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Teaches.me", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <!-- /.navbar-header -->
            <ul class="nav navbar-top-links navbar-left">
                <li>
                    <a href="@Url.Action("Index", "Home", new { Area="" })"><i class="fa fa-home fa-fw"></i> Home</a>
                </li>
                <li>
                    <a href="@Url.Action("About", "Home", new { Area="" })"><i class="fa fa-info-circle fa-fw"></i> About</a>
                </li>
                <li>
                    <a href="@Url.Action("Contact", "Home", new { Area="" })"><i class="fa fa-envelope fa-fw"></i> Contact</a>
                </li>
                
            </ul>
            <ul class="nav navbar-top-links navbar-right">
                <li>
                    <a href="@Url.Action("Register", "Account", new { Area="" })"><i class="fa fa-file fa-fw"></i> Register</a>
                </li>
                <li>
                    <a href="@Url.Action("Login", "Account", new { Area = "" })"><i class="fa fa-share fa-fw"></i> Log in</a>
                </li>
            </ul>
</nav>
        <div class="pad-1" id="home-area">
            <!--<div class="container-fluid body-content">-->
            @RenderBody()
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - Teaches.me @RenderSection("copyright", required: false)</p>
            </footer>
        </div>
    </div>
    @Scripts.Render("~/bundles/js")
    @RenderSection("scripts", required: false)

</body>
</html>
