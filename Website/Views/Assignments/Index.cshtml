@model Website.Models.AssignmentsData.AssignmentsIndex
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Assignments</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <h2 class="page-header">Make New Assignment</h2>
    </div>
    <div class="col-lg-2">
        <a href="@Url.Action("Word", "Vocabulary", new { Area="Project" })" class="text-center btn btn-primary" style="border: 1px solid #000; border-radius: .5em; display: inline-block; padding: 1em;">
            <i class="fa fa-book fa-5x"></i>
            <p>
                New Vocabulary Word
            </p>
        </a>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <h2 class="page-header">Current Assignments</h2>
    </div>
    <div class="col-lg-12">
        <table id="example" class="table table-striped table-bordered" cellspacing="0">
            <thead>
                <tr>
                    <th>Assignment</th>
                    <th>Type</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>
                        Word "Peek"
                    </td>
                    <td>
                        Vocabulary
                    </td>
                    <td class="text-right">
                        <a class="btn btn-lg btn-primary" href="@Url.Action("Word","Vocabulary", new {Area="Project", id="1"})">Edit</a>
                        <a class="btn btn-lg btn-success" href="@Url.Action("Word","Vocabulary", new {Area="Project", id="1"})">Submit</a>
                        <a class="btn btn-lg btn-warning" href="@Url.Action("Word","Vocabulary", new {Area="Project", id="1"})">Delete</a>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <h2 class="page-header">Past Assignments</h2>
    </div>
    <div class="col-lg-12">
        <table id="example" class="table table-striped table-bordered" cellspacing="0" width="100%">
            <thead>
                <tr>
                    <th>Assignment</th>
                    <th>Type</th>
                    <th>Grade</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>
                        Word "Avalanche"
                    </td>
                    <td>
                        Vocabulary
                    </td>
                    <td>
                        100%
                    </td>
                    <td class="text-right">
                        <a class="btn btn-lg btn-primary" href="@Url.Action("Word","Vocabulary", new {Area="Project", id="2"})">View Assignment</a>
                        <a class="btn btn-lg btn-success" href="@Url.Action("Word","Vocabulary", new {Area="Project", id="2"})">View Comments</a>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>